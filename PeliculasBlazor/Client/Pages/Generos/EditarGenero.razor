@page "/generos/editar/{GeneroId:int}"
<h3>Editar Genero</h3>
<FormularioGenero Genero="Genero" OnValidSubmit="Editar" />
@code {
    [Parameter] public int GeneroId { get; set; }

    private Genero Genero;
    protected override void OnInitialized()
    {
        Genero = new Genero() { Id = GeneroId, Nombre = "Comedia" };
    }

    private void Editar()
    {
        Console.WriteLine($"Editando genero de pelicula {GeneroId}");
    }
}
