<div style="margin-right: 2%; margin-bottom: 10px; text-align:center;">
    <a href="@UrlPelicula">
        <img src="@Item.Poster" alt="Poster" style="width: 225px; height:300px;" />
    </a>
    <p style="max-width: 225px; height: 44px; font-size: 15px; font-weight: bold;"><a href="@UrlPelicula">@Item.TituloCortado</a></p>
    <div>
        <a class="btn btn-info">Editar</a>
        <button type="button" class="btn btn-danger" @onclick="@(() => EliminarPelicula.InvokeAsync(Item))">Eliminar</button>
    </div>
</div>
@code{
    [Parameter] public Pelicula Item { get; set; }
    [Parameter] public EventCallback<Pelicula> EliminarPelicula { get; set; }
    private string UrlPelicula = string.Empty;


    protected override void OnInitialized()
    {
        UrlPelicula = $"pelicula/";
    }
}
